{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "http://example.com/example.json",
	"type": "array",
	"items": {
		"type": "object",
		"properties": {
			"id": {
				"type": "integer"
			},
			"title": {
				"type": "string"
			},
			"author": {
				"type": "string"
			},
			"text": {
				"type": "array",
				"items": {
					"type": "string"
				}
			},
			"maxPoints": {
				"type": "integer"
			},
			"questionType": {
				"enum": [
					"CHOICE",
					"FILLOUT",
					"FREETEXT"
				]
			},
			"answers": {
				"type": "array",
				"items": {
					"type": "object",
					"properties": {
						"key": {
							"type": "object",
							"properties": {
								"id": {
									"type": "integer"
								},
								"questionId": {
									"type": "integer"
								}
							}
						},
						"text": {
							"type": "array",
							"items": {
								"type": "string"
							}
						},
						"correctness": {
							"enum": [
								"CORRECT",
								"OPTIONAL",
								"WRONG"
							]
						}
					},
					"required": [
						"key",
						"text",
						"correctness"
					]
				}
			}
		},
		"required": [
			"id",
			"title",
			"author",
			"text",
			"maxPoints",
			"questionType",
			"answers"
		]
	}
}
