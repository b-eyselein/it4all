{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Web Exercises",
    "description": "Web Exercises for it4all",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "integer",
                "minimum": 1
            },
            "title": {
                "type": "string"
            },
            "text": {
                "type": "string"
            },
            "htmlTasks": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "text": {
                            "type": "string"
                        },
                        "xpath": {
                            "type": "string"
                        },
                        "attributes": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "key": {
                                        "type": "string"
                                    },
                                    "value": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    },
                    "required": [
                        "text",
                        "xpath",
                        "attributes"
                    ]
                }
            },
            "cssTasks": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "text": {
                            "type": "string"
                        },
                        "xpath": {
                            "type": "string"
                        },
                        "attributes": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "key": {
                                        "type": "string"
                                    },
                                    "value": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    },
                    "required": [
                        "text",
                        "xpath",
                        "attributes"
                    ]
                }
            },
            "jsTasks": {
                "type": "array",
                "items": {
                    "text": {
                        "type": "string"
                    },
                    "preconditions": {
                        "type": "object",
                        "properties": {
                            "xpath": {
                                "type": "string"
                            },
                            "awaited": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "xpath",
                            "awaited"
                        ]
                    },
                    "action": {
                        "type": "object",
                        "properties": {
                            "actiontype": {
                                "enum": [
                                    "CLICK",
                                    "FILLOUT"
                                ]
                            },
                            "xpath": {
                                "type": "string"
                            },
                            "keysToSend": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "actionType",
                            "xpath"
                        ]
                    },
                    "postconditions": {
                        "type": "object",
                        "properties": {
                            "xpath": {
                                "type": "string"
                            },
                            "awaited": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "xpath",
                            "awaited"
                        ]
                    }
                }
            }
        },
        "required": [
            "htmlTasks",
            "cssTasks",
            "jsTasks"
        ]
    },
    "minItems": 1,
    "uniqueItems": true
}
