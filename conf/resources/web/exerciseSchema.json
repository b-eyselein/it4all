{
	"$schema": "http://json-schema.org/draft-04/schema#", 
	"type": "array", 
	"items": {
		"type": "object", 
		"properties": {
			"id": {
				"type": "integer"
			}, 
			"title": {
				"type": "string"
			}, 
			"text": {
				"type": "array", 
				"items": {
					"type": "string"
				}
			}, 
			"htmlText": {
				"type": "array", 
				"items": {
					"type": "string"
				}
			}, 
			"cssText": {
				"type": "array", 
				"items": {
					"type": "string"
				}
			}, 
			"jsText": {
				"type": "array", 
				"items": {
					"type": "string"
				}
			}, 
			"htmlTasks": {
				"type": "array", 
				"items": {
					"type": "object", 
					"properties": {
						"text": {
							"type": "string"
						}, 
						"xpathQuery": {
							"type": "string"
						}, 
						"attributes": {
							"type": "array", 
							"items": {
								"type": "object", 
								"properties": {
									"key": {
										"type": "string"
									}, 
									"value": {
										"type": "string"
									}
								}
							}
						}, 
						"content": {
							"type": "string"
						}
					}, 
					"required": [
						"text", 
						"xpathQuery"
					]
				}
			}, 
			"cssTasks": {
				"type": "array", 
				"items": {
					"type": "object", 
					"properties": {
						"text": {
							"type": "string"
						}, 
						"xpathQuery": {
							"type": "string"
						}, 
						"attributes": {
							"type": "array", 
							"items": {
								"type": "object", 
								"properties": {
									"key": {
										"type": "string"
									}, 
									"value": {
										"type": "string"
									}
								}
							}
						}
					}, 
					"required": [
						"text", 
						"xpathQuery"
					]
				}
			}, 
			"jsTasks": {
				"type": "array", 
				"items": {
					"type": "object", 
					"properties": {
						"text": {
							"type": "string"
						}, 
						"xpathQuery": {
							"type": "string"
						}, 
						"conditions": {
							"type": "array", 
							"items": {
								"type": "object", 
								"properties": {
									"key": {
										"type": "object", 
										"properties": {
											"exerciseId": {
												"type": "integer"
											}, 
											"taskId": {
												"type": "integer"
											}, 
											"conditionId": {
												"type": "integer"
											}
										}, 
										"required": [
											"exerciseId", 
											"taskId", 
											"conditionId"
										]
									}, 
									"xpathQuery": {
										"type": "string"
									}, 
									"awaitedValue": {
										"type": "string"
									}, 
									"isPrecondition": {
										"type": "boolean"
									}
								}, 
								"required": [
									"key", 
									"xpathQuery", 
									"awaitedValue", 
									"isPrecondition"
								]
							}
						}, 
						"action": {
							"type": "object", 
							"properties": {
								"actionxpath": {
									"type": "string"
								}, 
								"actiontype": {
									"enum": [
										"CLICK", 
										"FILLOUT"
									]
								}, 
								"keystosend": {
									"type": "string"
								}
							}, 
							"required": [
								"actionxpath", 
								"actiontype"
							]
						}
					}, 
					"required": [
						"key", 
						"text", 
						"xpathQuery", 
						"conditions", 
						"action"
					]
				}
			}
		}, 
		"required": [
			"id", 
			"title", 
			"text", 
			"htmlText", 
			"cssText", 
			"jsText", 
			"htmlTasks", 
			"cssTasks", 
			"jsTasks"
		]
	}, 
	"minItems": 1, 
	"uniqueItems": true
}