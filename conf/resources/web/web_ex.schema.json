{
  "type": "array",
  "items": {
    "title": "WebExerciseCompleteEx",
    "type": "object",
    "properties": {
      "id": {"type": "number"},
      "semanticVersion": {"$ref": "../semantic_version.schema.json"},
      "title": {"type": "string"},
      "author": {"type": "string"},
      "text": {"type": "string"},
      "status": {"type": "string", "enum": ["RESERVED", "CREATED", "ACCEPTED", "APPROVED"]},
      "htmlTasks": {
        "type": "array", "items": {"$ref": "#/definitions/HtmlTask"}
      },
      "jsTasks": {
        "type": "array", "items": {"$ref": "#/definitions/JsTask"}
      },
      "files": {
        "type": "array", "items": {"$ref": "#/definitions/WebFile"}
      },
      "samples": {
        "type": "array", "items": {"$ref": "#/definitions/WebSample"}
      }
    },
    "required": [
      "id", "semanticVersion", "title", "author", "text", "status", "htmlTasks", "jsTasks", "files", "samples"
    ],
    "additionalItems": false
  },
  "definitions": {
    "HtmlTask": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "text": {"type": "string"},
        "elementSpec": {"$ref": "#/definitions/HtmlElementSpec"}
      },
      "required": ["id", "text", "elementSpec"]
    },
    "HtmlElementSpec": {
      "type": "object",
      "properties": {
        "xpathQuery": {"type": "string"},
        "awaitedTag": {"type": "string"},
        "textContent": {"type": "string"},
        "attributes": {
          "type": "array", "items": {"$ref": "#/definitions/HtmlAttribute"}
        }
      },
      "required": ["xpathQuery", "awaitedTag"]
    },
    "HtmlAttribute": {
      "type": "object",
      "properties": {
        "key": {"type": "string"},
        "value": {"type": "string"}
      },
      "required": ["key", "value"]
    },
    "JsTask": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "text": {"type": "string"},
        "preConditions": {"type": "array", "items": {"$ref": "#/definitions/HtmlElementSpec"}},
        "action": {"$ref": "#/definitions/JsAction"},
        "postConditions": {"type": "array", "items": {"$ref": "#/definitions/HtmlElementSpec"}}
      },
      "required": ["id", "text", "preConditions", "action", "postConditions"]
    },
    "JsAction": {
      "type": "object",
      "properties": {
        "xpathQuery": {"type": "string"},
        "actionType": {"type": "string", "enum": ["Click", "FillOut"]}
      },
      "required": ["xpathQuery", "actionType"]
    },
    "WebFile": {
      "type": "object",
      "properties": {
        "path": {"type": "string"},
        "resourcePath": {"type": "string"},
        "fileType": {"type": "string", "enum": ["htmlmixed", "css", "js"]},
        "editable": {"type": "boolean"}
      },
      "required": ["path", "resourcePath", "fileType"]
    },
    "WebSample": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "htmlSample": {"type": "string"},
        "jsSample": {"type": "string"}
      },
      "required": ["id", "htmlSample"]
    }
  }
}
