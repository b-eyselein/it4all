{
  "title": "WebExerciseCompleteEx",
  "type": "object",
  "properties": {
    "id": {"type": "number"},
    "semanticVersion": {"$ref": "../semantic_version.schema.json"},
    "title": {"type": "string"},
    "author": {"type": "string"},
    "text": {"type": "string"},
    "status": {"type": "string", "enum": ["RESERVED", "CREATED", "ACCEPTED", "APPROVED"]},
    "htmlTasks": {
      "type": "array", "items": {"$ref": "#/definitions/HtmlTask"}
    },
    "jsTasks": {
      "type": "array", "items": {"$ref": "#/definitions/JsTask"}
    },
    "phpTasks": {
      "type": "array", "items": {"$ref": "#/definitions/PhpTask"}
    },
    "samples": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {"type": "number"},
          "htmlSample": {"type": "string"},
          "jsSample": {"type": "string"},
          "phpSample": {"type": "string"}
        },
        "required": ["id"]
      }
    }
  },
  "required": [
    "id", "semanticVersion", "title", "author", "text", "status", "htmlTasks", "jsTasks", "phpTasks", "samples"
  ],
  "additionalItems": false,
  "definitions": {
    "HtmlTask": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "text": {"type": "string"},
        "xpathQuery": {"type": "string"},
        "attributes": {
          "type": "array", "items": {"$ref": "#/definitions/HtmlAttribute"}
        },
        "textContent": {"type": "string"}
      },
      "required": ["id", "text", "xpathQuery"]
    },
    "HtmlAttribute": {
      "type": "object",
      "properties": {
        "key": {"type": "string"},
        "value": {"type": "string"}
      },
      "required": ["key", "value"]
    },
    "JsTask": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "text": {"type": "string"},
        "xpathQuery": {"type": "string"},
        "actiontype": {
          "type": "string",
          "enum": ["CLICK", "FILLOUT"]
        },
        "conditions": {
          "type": "array", "items": {"$ref": "#/definitions/JsCondition"}
        }
      },
      "required": ["id", "text", "xpathQuery", "actiontype", "conditions"]
    },
    "JsCondition": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "xpathQuery": {"type": "string"},
        "isPrecondition": {"type": "boolean"},
        "awaited": {}
      },
      "required": ["id", "xpathQuery", "isPrecondition", "awaited"]
    },
    "PhpTask": {
      "type": "object",
      "properties": {}
    }
  }
}