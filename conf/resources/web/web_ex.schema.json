{
  "type": "array",
  "items": {
    "title": "WebExerciseCompleteEx",
    "type": "object",
    "properties": {
      "id": {"type": "number"},
      "semanticVersion": {"$ref": "../semantic_version.schema.json"},
      "title": {"type": "string"},
      "author": {"type": "string"},
      "text": {"type": "string"},
      "status": {"type": "string", "enum": ["RESERVED", "CREATED", "ACCEPTED", "APPROVED"]},
      "fileName": {"type": "string"},
      "htmlText": {"type": "string"},
      "htmlTasks": {
        "type": "array", "items": {"$ref": "#/definitions/HtmlTask"}
      },
      "jsText": {"type": "string"},
      "jsTasks": {
        "type": "array", "items": {"$ref": "#/definitions/JsTask"}
      },
      "files": {
        "type": "array", "items": {"$ref": "#/definitions/WebFile"}
      },
      "samples": {
        "type": "array", "items": {"$ref": "#/definitions/WebSample"}
      }
    },
    "required": [
      "id",
      "semanticVersion",
      "title",
      "author",
      "text",
      "status",
      "fileName",
      "htmlTasks",
      "jsTasks",
      "files",
      "samples"
    ],
    "additionalProperties": false
  },
  "definitions": {
    "HtmlTask": {
      "type": "object",
      "properties": {
        "text": {"type": "string"},
        "elementSpec": {"$ref": "#/definitions/HtmlElementSpec"}
      },
      "required": ["text", "elementSpec"],
      "additionalProperties": false
    },
    "HtmlElementSpec": {
      "type": "object",
      "properties": {
        "id": {"type": "integer"},
        "xpathQuery": {"type": "string"},
        "awaitedTag": {"type": "string"},
        "awaitedTextContent": {"type": "string"},
        "attributes": {
          "type": "array", "items": {"$ref": "#/definitions/HtmlAttribute"}
        }
      },
      "required": ["id", "xpathQuery", "awaitedTag"],
      "additionalProperties": false
    },
    "HtmlAttribute": {
      "type": "object",
      "properties": {
        "key": {"type": "string"},
        "value": {"type": "string"}
      },
      "required": ["key", "value"]
    },
    "JsTask": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "text": {"type": "string"},
        "preConditions": {"type": "array", "items": {"$ref": "#/definitions/HtmlElementSpec"}},
        "action": {"$ref": "#/definitions/JsAction"},
        "postConditions": {"type": "array", "items": {"$ref": "#/definitions/HtmlElementSpec"}}
      },
      "required": ["id", "text", "preConditions", "action", "postConditions"],
      "additionalProperties": false
    },
    "JsAction": {
      "type": "object",
      "properties": {
        "xpathQuery": {"type": "string"},
        "keysToSend": {"type": "string"},
        "actionType": {"type": "string", "enum": ["Click", "FillOut"]}
      },
      "required": ["xpathQuery", "actionType"],
      "additionalProperties": false
    },
    "WebFile": {
      "type": "object",
      "properties": {
        "path": {"type": "string"},
        "resourcePath": {"type": "string"},
        "fileType": {"type": "string", "enum": ["htmlmixed", "css", "javascript"]},
        "editable": {"type": "boolean", "default": true}
      },
      "required": ["path", "resourcePath", "fileType"],
      "additionalProperties": false
    },
    "WebSample": {
      "type": "object",
      "properties": {
        "id": {"type": "number"},
        "files": {
          "type": "array", "items": {"$ref": "#/definitions/WebFile"}
        }
      },
      "required": ["id", "files"],
      "additionalProperties": false
    }
  }
}
