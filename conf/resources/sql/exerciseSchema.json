{
	"$schema": "http://json-schema.org/draft-04/schema#", 
	"type": "array", 
	"items": {
		"type": "object", 
		"properties": {
			"id": {
				"type": "integer"
			}, 
			"shortName": {
				"type": "string"
			}, 
			"title": {
				"type": "string"
			}, 
			"text": {
				"type": "string"
			}, 
			"scriptFile": {
				"type": "string"
			}, 
			"exercises": {
				"type": "array", 
				"items": {
					"type": "object", 
					"properties": {
						"id": {
							"type": "integer"
						}, 
						"exerciseType": {
							"enum": [
								"CREATE", 
								"SELECT", 
								"UPDATE", 
								"INSERT", 
								"DELETE"
							]
						}, 
						"text": {
							"type": "string"
						}, 
						"hint": {
							"type": "string"
						}, 
						"sampleSolutions": {
							"type": "array", 
							"items": {
								"type": "object", 
								"properties": {
									"key": {
										"type": "object", 
										"properties": {
											"exerciseId": {
												"type": "integer"
											}, 
											"sampleId": {
												"type": "integer"
											}
										}, 
										"required": [
											"exerciseId", 
											"sampleId"
										]
									}
								}, 
								"solution": {
									"type": "array", 
									"items": {
										"type": "string"
									}
								}
							}, 
							"required": [
								"key", 
								"solution"
							]
						}
					}, 
					"validation": {
						"type": "string"
					}, 
					"tags": {
						"type": "array", 
						"items": {
							"enum": [
								"JOIN", 
								"DOUBLE_JOIN", 
								"TRIPLE_JOIN", 
								"ORDER_BY", 
								"GROUP_BY", 
								"FUNCTION", 
								"ALIAS", 
								"LIMIT", 
								"SUBSELECT"
							]
						}
					}
				}, 
				"required": [
					"id", 
					"exerciseType", 
					"text", 
					"hint", 
					"sampleSolutions", 
					"validation", 
					"tags"
				]
			}
		}, 
		"required": [
			"shortName", 
			"title", 
			"scriptFile", 
			"exercises"
		]
	}, 
	"minItems": 1, 
	"maxItems": 1
}