{
	"$schema": "http://json-schema.org/draft-04/schema#", 
	"type": "array", 
	"items": {
		"type": "object", 
		"properties": {
			"shortname": {
				"type": "string"
			}, 
			"longname": {
				"type": "string"
			}, 
			"scriptfile": {
				"type": "string"
			}, 
			"exercises": {
				"type": "array", 
				"items": {
					"type": "object", 
					"properties": {
						"id": {
							"type": "integer"
						}, 
						"exercisetype": {
							"enum": [
								"CREATE", 
								"SELECT", 
								"UPDATE", 
								"INSERT", 
								"DELETE"
							]
						}, 
						"text": {
							"type": "string"
						}, 
						"hint": {
							"type": "string"
						}, 
						"samplesolutions": {
							"type": "array", 
							"items": {
								"type": "string"
							}
						}, 
						"validation": {
							"type": "string"
						}, 
						"tags": {
							"type": "array", 
							"items": {
								"enum": [
									"JOIN", 
									"DOUBLE_JOIN", 
									"TRIPLE_JOIN", 
									"ORDER_BY", 
									"GROUP_BY", 
									"FUNCTION", 
									"ALIAS", 
									"LIMIT", 
									"SUBSELECT"
								]
							}
						}
					}
				}, 
				"required": [
					"id", 
					"exercisetype", 
					"text", 
					"samplesolutions"
				]
			}
		}
	}
}