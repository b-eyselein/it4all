# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                  controllers.Application.index()

# Userverwaltung
->     /                  core.Routes

# User
GET    /user              controllers.UserController.index()
GET    /preferences       controllers.UserController.preferences()
POST   /preferences       controllers.UserController.saveOptions()

# Admin
GET    /admin             controllers.AdminController.index()

# Python
->     /python            python.Routes

# Choice
->     /choice            choice.Routes


# Zahlensysteme
->     /binary            binary.Routes

# Boolesche Algebra
->     /bool              bool.Routes

# Web-Korrektur
->     /web               web.Routes

# Javascript-Korrektur

->     /js                js.Routes

# SQL-Korrektur
->     /sql               sql.Routes

# Mindmap-Korrektur
->     /mindmap           mindmap.Routes

# XML
->     /xml               xml.Routes

# Excel
->     /spread            spread.Routes

# UML
->     /uml               uml.Routes

# Evaluation
GET    /eval/             controllers.Evaluation.index()
POST   /eval/submit       controllers.Evaluation.submit()

GET    /eval/evaluation   controllers.AdminController.evaluation()

# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file      controllers.Assets.versioned(path="/public", file: Asset)