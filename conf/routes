# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           	controllers.Application.index()

# Administrator
GET		/admin							controllers.Admin.index()

# Login && Logout
GET		/login							controllers.Application.login()
POST	/authenticate					controllers.Application.authenticate()
GET		/logout							controllers.Application.logout()
GET		/direct/:name/:type/:id			controllers.Application.directLogin(name: String, type: String, id: Int)
GET		/direct/:type/:id				controllers.Application.fromWuecampus(type: String, id: Int, name: String ?= "")

# HTML
GET		/html/							controllers.HTML.index()
GET		/html/:ex						controllers.HTML.exericse(ex: Int)
POST	/html/upload/:ex				controllers.HTML.upload(ex: Int)
GET		/solutions/:user/html/:ex		controllers.HTML.site(user: String, ex: Int)

# Evaluation
GET		/eval/							controllers.Evaluation.index()
POST	/eval/submit					controllers.Evaluation.submit()

# Excel
GET		/excel/							controllers.Excel.index()
GET		/excel/:ex						controllers.Excel.exercise(ex: Int)
POST	/excel/upload/:ex				controllers.Excel.upload(ex: Int)
GET		/excel/download/:ex/:typ		controllers.Excel.download(ex: Int, typ: String)

# User
GET		/user							controllers.UserController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               	controllers.Assets.versioned(path="/public", file: Asset)
