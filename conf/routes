# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           			controllers.Application.index()

# Login && Logout
GET		/login									controllers.Application.login()
POST	/login									controllers.Application.authenticate()
GET		/logout									controllers.Application.logout()
GET		/directlogin							controllers.Application.directlogin(ex: Int ?= -1, snr: String ?= "")

# HTML
#GET     /html                       			controllers.HTML.html(exercise: Int ?= -1)
GET		/solutions/:userName/html/:exercise		controllers.HTML.site(userName: String, exercise: Int)

GET		/html/overview							controllers.HTML.htmlOverview()
#GET	/html/upload							controllers.HTML.upload()
GET		/html/uploadfile/:ex					controllers.HTML.uploadFile(ex: Int)
#POST	/html/save								controllers.HTML.saveSol()
POST	/html/saveFile							controllers.HTML.saveSolFile()

#GET		/html/socket			    			controllers.HTML.getWebSocket()

# Excel
GET		/excel						controllers.Excel.index()
POST	/excel/uploadFile			controllers.Excel.upload()

# SQL
GET	   /sql						    			controllers.SQL.index()

# PHP
GET    /php                         			controllers.PHP.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               			controllers.Assets.versioned(path="/public", file: Asset)
