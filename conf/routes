# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           	controllers.Application.index()

# Login && Logout
GET		/login							controllers.Application.login()
POST	/authenticate					controllers.Application.authenticate()
GET		/logout							controllers.Application.logout()
GET		/directlogin					controllers.Application.directlogin(ex: Int ?= -1, snr: String ?= "")

# HTML
GET		/solutions/:user/html/:ex		controllers.HTML.site(user: String, ex: Int)
GET		/html/overview					controllers.HTML.htmlOverview()
GET		/html/uploadfile/:ex			controllers.HTML.uploadFile(ex: Int)
POST	/html/saveFile					controllers.HTML.saveSolFile()

# Evaluation
GET		/eval/:user						controllers.Evaluation.index(user: String)
POST	/eval/submit					controllers.Evaluation.submit()

# Excel
GET		/excel							controllers.Excel.index()
POST	/excel/uploadFile				controllers.Excel.upload()

# User
GET		/user							controllers.User.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               	controllers.Assets.versioned(path="/public", file: Asset)
