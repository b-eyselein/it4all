# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           	controllers.Application.index()

# Login && Logout
GET		/login							controllers.Application.login()
POST	/authenticate					controllers.Application.authenticate()
GET		/logout							controllers.Application.logout()
GET		/direct/:name/:type/:id			controllers.Application.directLogin(name: String, type: String, id: Int)

# HTML
GET		/html/							controllers.HTML.index()
GET		/html/:ex						controllers.HTML.exericse(ex: Int)
POST	/html/upload					controllers.HTML.upload()
GET		/solutions/:user/html/:ex		controllers.HTML.site(user: String, ex: Int)

# Evaluation
GET		/eval/:user						controllers.Evaluation.index(user: String)
POST	/eval/submit					controllers.Evaluation.submit()

# Excel
GET		/excel/							controllers.Excel.index()
GET		/excel/:ex						controllers.Excel.exercise(ex: Int)
POST	/excel/upload					controllers.Excel.upload()

# User
GET		/user							controllers.User.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               	controllers.Assets.versioned(path="/public", file: Asset)
