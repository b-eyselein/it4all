# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET    /                          controllers.Application.index()

# Administrator
GET    /admin                     controllers.Admin.index()

# Userverwaltung
->     /                          conf.Routes
# User
GET    /user                      controllers.UserController.index()

# Web-Korrektur
->     /web                       web.Routes

# SQL-Korrektur
->     /sql                       sql.Routes

# Mindmap-Korrektur
->     /mindmap                   mindmap.Routes

# Evaluation
GET    /eval/                     controllers.Evaluation.index()
POST   /eval/submit               controllers.Evaluation.submit()

# Excel
GET    /excel/                    controllers.exercises.Excel.index()
GET    /excel/:ex                 controllers.exercises.Excel.exercise(ex: Int)
POST   /excel/upload/:ex          controllers.exercises.Excel.upload(ex: Int)
GET    /excel/download/:ex/:typ   controllers.exercises.Excel.download(ex: Int, typ: String)


# Map static resources from the /public folder to the /assets URL path
GET    /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)
